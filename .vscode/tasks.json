{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Hammerspoon tests",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "CI=1 /Applications/Hammerspoon.app/Contents/Frameworks/hs/hs -c \"dofile(hs.configDir..'tests.lua')\""
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}